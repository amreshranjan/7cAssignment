<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amreshranjan.sevencapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ContentProviderHandler"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">

        </activity>

        <provider android:name=".ContentProviderExample"
            android:authorities="com.example.amreshranjan.sevencapplication.provider">
        </provider>

    </application>

</manifest>
